@model IEnumerable<Schedule.Models.ScheduleTable>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Добавить пару", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
              № пары
            </th>
            <th>
               Время
            </th>
            <th>
                Аудитория
            </th>
            <th>
               Группа
            </th>
            <th>
               Дисциплина
              </th>
            <th>
               Преподаватель
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Para.Number)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CallShedule.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Name)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.FIO)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
